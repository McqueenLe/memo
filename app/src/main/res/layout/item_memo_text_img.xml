<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:background="@drawable/selector_item_bg">

    <TextView
        android:id="@+id/tv_memo_time_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/orange"
        tools:text="2016年12月"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_memo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/text_size_mediumx"
                android:textColor="@color/text1"
                android:singleLine="true"
                tools:text="欢迎使用便签"/>

            <TextView
                android:id="@+id/tv_memo_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text2"
                tools:text="抓住一闪而过的灵感"/>

            <TextView
                android:id="@+id/tv_memo_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text3"
                tools:text="2016年12月"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRightImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/empty_photo"/>

        <CheckedTextView
            android:id="@+id/cbSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_checkbox"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_grey"/>
</LinearLayout>