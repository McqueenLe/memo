<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--底部弹出动画-->
    <style name="bottom_dialog_animstyle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/bottom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_out_anim</item>
    </style>

    <!--顶部弹出动画-->
    <style name="top_dialog_animstyle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/top_in_anim</item>
        <item name="android:windowExitAnimation">@anim/top_out_anim</item>
    </style>

    <!-- 弹窗样式 -->
    <style name="addDevWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_transparent_bg</item>
    </style>

    <!-- 设置提醒dialog弹出动画 -->
    <style name="add_dev_animstyle">
        <item name="android:windowEnterAnimation">@anim/alarm_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/alarm_dialog_out_anim</item>
    </style>
</resources>
